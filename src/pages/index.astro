---
import Layout from '../layouts/Layout.astro';
import LookupForm from '../components/LookupForm.astro';
---

<Layout title="Welcome to Astro">
    <main>
        <h1 class="text-gradient">Welcome to Our Key Lookup</h1>
        <div class="instructions">
            <p>Enter a key to retrieve its associated code.</p>
        </div>
        <LookupForm />
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 2rem;
        width: 90%;
        max-width: 800px;
        color: #333;
        font-size: 18px;
        line-height: 1.6;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .instructions {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    .instructions p {
        margin: 0;
        font-size: 1.1rem;
        color: #555;
    }

    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
</style>
